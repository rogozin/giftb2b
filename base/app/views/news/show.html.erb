<% page_title "#{@news.title} | Новости" -%>
<div class="center_block">
<div class="b-news">
<div class="b-news-header">
  <h1>Новости</h1>
  <div class="b-news-date"><%= I18n.l(@news.created_at.to_date, :format => :long) %></div>
</div>

<div class="b-news-content">
  <div id="news_content">
      <%= image_tag(@news.picture.url(:thumb), :id => "news_picture") if @news.picture %>  
    <h2><%= @news.title %></h2>
    <hr />
    <%= raw @news.body %>
  </div>
<div class="clear"></div>
</div>
<div class="b-news-footer">
  <div class="b-all-news">
    <%= link_to 'Все новости', news_index_path  %>
  </div>
  <div id="news_owner">
    <%= @news.firm.short_name %>
  </div>
  <div class="clear"></div>
</div>
</div>

</div>
