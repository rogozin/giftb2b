<% page_title "Новости" -%>

<div class="center_block">
<div class="b-news-index">
  <h1>Новости</h1>
  <% @news.each do |item| -%>
  <div class="b-news-header">
  <div class="b-news-info"><%= I18n.l(item.created_at.to_date, :format => :long) %>  <span><%= item.firm.short_name %></span></div>    
  <%= link_to item.title, news_path(item.permalink) %>
  </div>
  <% end -%>
</div>
</div>
