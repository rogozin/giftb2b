<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container" style="width: auto;">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
         <% if is_lk? -%>
        <div class="brand brand-lk">
          <a class="site-name" href="/">Giftpoisk.ru</a>
          <a class="service-name" href="/lk">личный кабинет</a>           
        </div>
        <% else -%>
          <a class="brand" href="/">Giftpoisk.ru</a>        
         <% end -%>         
        <div class="nav-collapse">
        <%= user_signed_in? ? render_navbar_menu : render_static_navbar_menu %>                  
          <ul class="nav pull-right">
          <li><a href="http://twitter.com/giftpoisk" class="icon-social picture-twitter" title="Twitter"></a></li>
          <% if cart_items_count -%>           
            <li class="dropdown">            
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Корзина <span class="label label-info cart-indicator"><%= cart_items_count %></span> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Посмотреть", main_app.cart_index_path %></li>
                <li class="divider"></li>
                <li><%= link_to 'Очистить', main_app.empty_cart_index_path, :remote => true, :method => :post %></li>               	  
              </ul>
            </li>
          <% end -%>
            <li class="divider-vertical"></li>
            <% if user_signed_in? -%>              
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user"></i> <%= user_name current_user %> <b class="caret"></b></a>
               <%= render_user_menu %>
            </li>
            <% else -%>        
            <li class="dropdown  nav">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user"></i>Войти<b class="caret"></b></a>
               <%= render :partial => "shared/inline_login"%>
            </li>            
            <% end -%>
          </ul>
        </div><!-- /.nav-collapse -->
      </div>
    </div><!-- /navbar-inner -->
  </div>
