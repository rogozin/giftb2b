<% if @products.present? -%>          
  
  <div class="center_block"> 
  <h1>Результаты поиска:</h1>
  <%= render :partial => 'shared/paginate2', :locals => {:products => @products} %>
  </div> <!-- end center_block --> 
 
  <div class="center_block" id="catalog_items"> 
    <% for product  in @products do -%>
      <%= render :partial => 'shared/product', :object=>product %>  
    <% end -%>
  	
    <div class="clear"></div> 
  </div> <!-- end center_block --> 
 
  <div class="center_block"> 

  <div class="spacer"></div>
  <%= render :partial => 'shared/paginate2', :locals => {:products => @products} %>
  </div> <!-- end center_block --> 
 <% end -%>
