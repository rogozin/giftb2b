<% if Settings.giftb2b? %>
@import "giftb2b_vars";
<% else %>
@import "giftpoisk_vars";
<% end %>

.ext-search {
  font-size:1.2em;	
}


.b-ext-search-inner {
  background-color:$background_color_search_inner;
}


.b-ext-search .bold-label, .b-ext-search h3  {
  color:#332E2B;
  font-weight:bold;
  font-size:1.1em; 
  line-height:1.2;
}  

@mixin ui-icon   { width: 16px; height: 16px; background-image: url("/assets/images/ui-icons_222222_256x240.png"); }
@mixin ui-icon-circle-triangle-n { background-position: -96px -192px; }
@mixin ui-icon-circle-triangle-s { background-position: -64px -192px; }

#ext_search_form {
  padding-top:15px;
  .line {
     width:100%;
     background-color:$search_line_color;
     margin:0;
  }
}


.b-ext-search {
  background-color: $background_color_search;
  padding:10px;
  h1 {color: $search_background_color;}
  .b-ext-search-inner {
    padding:5px;
    clear: both;
     margin-top:5px;
  }
  .header {float:left;}
  .collapse-all {
    padding-top:5px;
    a.up-down-text {
      display:block;
      float:left;
      padding-top:3px;
      padding-right:10px;
      color:$search_background_color;
      font-weight:bold;
    }
  }
  .collapse {
    float:right;
    a.up-down { 
      display:block;
      float:left;
//      margin-top:2px;
   }
    span.up, span.down {display:inline-block}
    span.up { 
          @include ui-icon;
          @include ui-icon-circle-triangle-n;   
        }
    span.down {
          @include ui-icon;
          @include ui-icon-circle-triangle-s;   
        }    
  }
    .collapsible-content {clear:both;}
}
.b-ext-search .even {
  background-color:#fff;
}

.b-ext-search-inner input[type="checkbox"] {
 margin-right:3px;
 margin-top:5px;
 vertical-align: text-bottom;
}

.b-ext-search-inner select {
  background: #fff;
} 
  
.b-ext-search-left  {
  margin-left:-100%; 
  width:100px;
  float:left;
}

.b-ext-search-center {
  float:left;
  width:100%;
}

.b-search-center-inner {
  margin:0 90px 0 100px;
}

.b-search-center-inner-no-right {
  margin:0 0 0 100px;
}


.b-ext-search-right { 
  float:left;
  width:50px;
  margin-left:-70px;
}

.v-align { padding-top:.3em; }
.full-size input {width:100%}

.supplier-items li  {
  display:inline-block;
  font-size:1em;
}

.supplier-items li {  
  width:170px; 
  line-height:1.6;
} 

.material-items li {
  width:100px;
  line-height:1.6
}

ul {
  &.b-column-container {
    li {
      &.li-column {
        color:#616F8F;
        min-width:30%;
        display: inline-block;
        vertical-align:top;
        }
       }
   }
  &.column-items  { 
    li { 
        line-height:1.9; 
         margin-right:0%;
         width:99%;
        a {margin-left:3px;}  
      }     
    ul {margin-left:10px;}
   }
}

.material-items {
  float:left;}

.color-box {
  width:18px;
  height:18px;
  border: 1px solid #7F7F7F;
  float:left;
  margin: 0 5px 5px 3px;
  cursor:pointer;
	-moz-border-radius: 2px;
	-webkit-border-radius: 2px;
	border-radius: 2px;
  z-index:10;
  position:relative;
	behavior: url(/javascripts/PIE.htc);
}


