<% page_title "Пользователи" -%>
<h1>Пользователи  компании <%= current_user.firm.name  if current_user.firm%></h1>
<hr />
<div class="btn-toolbar"><%= link_to 'Добавить нового пользователя', new_account_path, :class => "btn btn-info" if current_user.firm %></div>
<table class="table table-striped table-bordered table-condensed">
<tr>
  <th></th>
  <th>Имя</th>
  <th>ФИО</th>
  <th>Email</th>
  <th>Последний вход</th>
  <th class="th_lk"></th>
</tr>
  <% @users.each do |item| -%>
   <tr>
     <td><%= link_to image_tag('edit.png'), edit_account_path(item) %></td>
     <td><%= item.username %></td>
     <td><%= item.fio %></td>
     <td><%= item.email %></td>
     <td><%= I18n.l(item.current_sign_in_at, :format => :long)  if item.current_sign_in_at %></td>
     <td><%= link_to_unless current_user.id == item.id, image_tag('remove.png'), account_path(item), :method => :delete, :confirm => "Вы действительно хотите удалить пользователя?", :title => "Удалить" %></td>
   </tr> 
  <% end -%>
</table>


