<%= twitter_bootstrap_form_for  @account, :url => @account.new_record? ? accounts_path : account_path(@account), :html => {:method => @account.new_record? ? :post : :put, :class => "form-horizontal well"} do |form| -%>
      <%= form.text_field :email %>
    <% unless @account.new_record? -%>
      <%= form.password_field :password %>
      <%= form.password_field :password_confirmation %>
    <% end -%>
      <%= form.text_field :fio %>
      <%= form.text_field :appoint %>
      <%= form.text_field :phone %>
      <%= form.text_field :cellphone %>
      <%= form.text_field :skype %>
      <%= form.text_field :icq %>
      <%= submit_action form %>
      
<% end -%>      
