<%= form_tag calculate_commercial_offer_path(@commercial_offer), :remote => true, :id => "co_form" do %>
<table width="100%">
  <tr>
    <th><%= image_tag "unchecked.gif", :id => "select_all", :title => "Выбрать все"  %></th>
    <th>Изображение</th>
    <th>Артикул</th>
    <th>Наименование</th>
    <th>Цена за шт</th>
    <th class="no-wrap">Кол-во</th>
    <% if @commercial_offer.has_sale? %>
      <th>Скидка</th>
      <th>Сумма со скидкой</th>
    <% else %>
       <th>Сумма </th>       
    <% end -%>
    <th class="th_lk"></th>
    <th class="th_lk"></th>
  </tr>

<%= render :partial => "co_item_row", :collection => @commercial_offer.commercial_offer_items, :as => :item %>
</table>
<div class="b-submit">
 <%= submit_tag "Пересчитать" %>
 </div>
<% end %>

<div class="b-co-change-links">
  <p><%= link_to 'Добавить товар из Отложенных', cart_products_path(:id => @commercial_offer.id, :object_type => "LkCommercialOffer"), :remote => true, :class => "add-link"  %></p>
  <div id="add_cart_prodcut"></div>
  <div class="spacer"></div>
  <p><%= link_to 'Добавить товар из Моей базы сувениров', load_products_path(:id => @commercial_offer.id, :object_type => "LkCommercialOffer"), :remote => true, :class => "add-link"   %></p>
  <div id="add_lk_prodcut"></div>
  <div class="spacer"></div>
<%#= link_to 'Преобразовать в заказ', move_to_order_commercial_offer_path(@commercial_offer), :method => :post, :confirm => "Коммерческое предлоежние будет преобразовано в заказ. Продолжить?"  %>
</div>
<div id="delta_messages">
</div>


<%= render :partial => "modify" %>      
 <h3>Комментарий к коммерческому предложению:</h3> 
<div class="b-co-description">
  <%= text_area_tag :signature,  @commercial_offer.signature, :rows => 5 %>
</div>

<div class="clear"></div>

