<% page_title "Клиенты" -%>
<h1>Клиенты</h1>
<hr />
<div class="btn-toolbar"><%= link_to 'Новый клиент', new_firm_path, :class => "btn btn-info" if current_user.firm %></div>
<% if @firms.present? -%>
  <table class="table table-striped table-bordered table-condensed">
  <tr>
    <th></th>
    <th>Название</th>
    <th>Контактное лицо</th>
    <th>E-mail</th>
    <th>Телефон</th>
    <th class="th_lk"></th>
  </tr>
   <% @firms.each do |item| -%>
     <tr>
       <td><%= link_to image_tag('edit.png'), edit_firm_path(item) %></td>
       <td><%= item.name %></td>
       <td><%= item.contact %></td>
       <td><%= item.email %></td>
       <td><%= item.phone %></td>
       <td><%= link_to image_tag('remove.png'), firm_path(item), :method => :delete, :confirm => "Удалить данные о клиенте?", :title => "Удалить"  %></td>
     </tr>
   <% end -%>
</table>
<% else -%>
<p>В списке нет ни одного клиента</p>
<% end -%>
