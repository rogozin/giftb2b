</div>

<div class="spacer"></div>

<h2>Регистрация</h2>

<%= form_for @user,  :html => {:class => 'one_line_form'} do |form| %>
  <%= render :partial => 'shared/error_messages', :locals => {:target => @user} %>                
  <%= hidden_field_tag "step", "step_2" %>
  <%= hidden_field_tag "i_am", @user_type %>
    <div class ="b-formfield-div">
      <%= form.label :fio %><span>*</span>
      <%= form.text_field :fio %>
    </div>  
    <div class ="b-formfield-div">
      <%= form.label :company_name %><span>*</span>
      <%= form.text_field :company_name %>
    </div>
    <div class ="b-formfield-div">
      <%= form.label :city %><span>*</span>
      <%= form.text_field :city %>
    </div>        
    <div class="b-formfield-div">
      <%= form.label :email %><span>*</span>
      <%= form.text_field :email %>
    </div>
     <div class ="b-formfield-div">
      <%= form.label :phone %><span>*</span>
      <%= form.text_field :phone %>
    </div>    
     <div class ="b-formfield-div">
      <%= form.label :appoint %>
      <%= form.text_field :appoint %>
    </div>    
     <div class ="b-formfield-div">
      <%= form.label :url %>
      <%= form.text_field :url %>
    </div>         
    <div class ="b-formfield-div">
      <%= form.submit "Зарегистрироваться" %>
    </div>
  <% end %>

