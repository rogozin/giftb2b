<% content_for :meta_description, @category.meta_description -%>
<% content_for :meta_keywords, @category.meta_keywords -%>
<% page_title(Category.tree_nesting_by_name(Category.cached_active_categories, @category).reverse.join(' | ')) -%>
<div class="content"> 
<div class="center_block"> 
<p class="r_text">
<strong>Рубрика: <%= link_to Category.tree_nesting_by_name(Category.cached_active_categories, @category).reverse.join('/'), category_path(@category), :class => "menu_left" %>
</strong>
<%= catalog_children @category %>
</p> 
</div> <!-- end center_block --> 
 
<div class="center_block"> 

<%= render :partial => 'foreign/shared/paginate', :object=> @products %>
</div> <!-- end center_block --> 
 
<div class="center_block" id="catalog_items"> 
  <% for product  in @products do -%>
    <%= render :partial => 'foreign/shared/product', :object=>product %>  
  <% end -%>
  	
  <div class="clear"></div> 
</div> <!-- end center_block --> 
 
<div class="center_block"> 
<%= render :partial => 'foreign/shared/paginate', :object=> @products %>
<div class="mrg"></div>
</div> <!-- end center_block --> 

<div class="center_block"> 
<div class="descript_category"><%= @category.description if @category.show_description %></div>
</div> <!-- end center_block -->  
 
</div> <!-- end content --> 
