<%= form_for :user_session, :url=>user_session_path, :html=>{:id=>"login_form", :name => "login_form", :class => "one_line_form"} do |form| %>
    <%#= form.error_messages %>  
      <div class="login-form" >
		      <h2>Личный кабинет:</h2>
        <p> <%= label_tag :username, "имя:" %> <%= form.text_field :username %></p>
        <p><%= label_tag :password, "пароль:" %> <%= form.password_field :password %>
     		<a class="lk-login" onclick="login_form.submit();" >.</a>
        </p>

        <span style="color:#ff66cc;font-size:10pt"><%= flash[:login_error] %></span>
        <span class="lk-reg"><a href="/register">pегистрация</a></span> 
      </div> 
       <%= submit_tag ".", :style=>"visibility:hidden; width:0px;" %>
      <% end %>    
 
