<%= form_for :user_session, :url=>user_session_path, :html=>{:id=>"login_form", :name => "login_form"} do |form| %>
    <%#= form.error_messages %>  
      <div style="padding-top:3px;margin-left:8px;" ><p class="text_10pt_999999_bold">Личный кабинет:</p> 
        <p style="font-weight:normal;font-size:9pt;padding-top:3px;color:#999999">e-mail:&nbsp;&nbsp;<%= form.text_field :username, :style=>"width:130px" %>
        <p style="font-weight:normal;font-size:9pt;padding-top:3px;color:#999999">пароль:<%= form.password_field :password, :style=>"width:130px" %>
        <%= form.submit nil, :style=>"visibility:hidden; width:0px;" %>
        <span style="color:white;font-weight:bold;cursor:pointer" onclick="login_form.submit();" > >></span></p> 
        <span style="color:#ff66cc;font-size:10pt"><%= flash[:login_error] %></span>
        <a style="padding-left:102px;font-weight:normal;font-size:9pt;padding-top:3px;color:#999999" href="#">pегистрация</a> 
      </div> 
      <% end %>    
