<% page_title "Заказы" -%>

<h2>Список всех заказов</h2>

<table width="100%">
<tr>
  <th></th>
  <th>№ заказа</th>
  <th>Фирма</th>
  <th>Заказчик</th>
  <th>Статус</th>
  <th>Сумма</th>
  <th>Посл. изменение</th>
  <th>Автор</th>
  <th></th>
</tr>
<% @orders.each do |item| -%>
  <tr>
    <td><%= link_to image_tag('edit.png'), edit_lk_order_path(item) %></td>
    <td><%= item.id  %></td>
    <td><%= item.lk_firm.name  if item.lk_firm %></td>
    <td><%= item.user_name %></td>
    <td><%= item.status %></td>
    <td><%= price_ru_label item.sum %></td>
    <td><%= I18n.l(item.updated_at, :format => :long) %></td>
    <td><%= item.is_remote? ? "с сайта" : (item.user ? item.user.fio : "-") %></td>
    <td><%= link_to image_tag('bin.png'), lk_order_path(item), :method => :delete, :confirm => "Удалить заказ?" %></td>
  </tr>
<% end -%>
</table>
