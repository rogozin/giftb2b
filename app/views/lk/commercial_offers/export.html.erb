<table> 
	<tr> 
	 <td><img src="logo.png" alt="logo" /></td> 
	 <td> 
	 <p><%= @commercial_offer.firm.short_name %></p> 
	<p><%= @commercial_offer.firm.addr_f %></p> 
	<p>Менеджер: <%= @commercial_offer.user.fio %> </p> 
	<p> Тел./факс: <%= @commercial_offer.firm.phone %></p>
	<p> e-mail: <%= @commercial_offer.firm.email %>, веб-сайт: <%= @commercial_offer.firm.url %></p>
	 </td> 
	</tr> 
</table>
<!-- Вывод товара --> 
<table cellspacing="4" cellpadding="4" border="0"> 
<% @commercial_offer.commercial_offer_items.each do |item| -%>
<tr> 
<td width="90"> 
  <%= image_tag("#{controller.request.protocol}#{controller.request.host}:#{controller.request.port}/images/default_image.jpg") %>
</td> 
<td width="200"> 
		<p>Название товара: <%= item.product.short_name %></p> 
		<p>Артикул: <%= item.product.unique_code %></p> 
		<p>Цена: <%= product_price item.product %></p> 
		<p>Количество: <%= item.quantity %></p> 
		<p>Сумма общая:</p> 
		<p>Материал:</p> 
		<p>Цвет:</p> 
		<p>Размер:</p> 
		<p>Упаковка:</p>
		<p>Нанесение:</p> 
</td> 
<td width="200"> 
		<p>Описание: <%= item.description %></p> 
</td> 
</tr> 
<% end -%>
</table>
