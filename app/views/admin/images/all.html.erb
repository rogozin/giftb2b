<%title 'Все изображения'  %>
<div class="g-left">
  <div>
<table>
  <tr>
    <th>Код</th>
    <th>Изображение</th>
    <th>Имя файла</th>
    <th>Размер</th>
     <th>Дт. создания</th>     
     <th>Ссылок</th>
     <th></th>
  </tr>
  <% @images.each do |item| -%>
   <tr>
      <td><%= item.id %></td>
    	<td>
    	  <%= image_tag item.picture.url(:thumb) %>

    	</td>
    	<td>
    	  <%= item.picture_file_name %> <br />
     	  <%= link_to 'оригинал', item.picture.url, :popup => ['new_window_name', 'height=300,width=300']  %>
    	</td>
    	<td>
    	  <%= number_to_human_size(item.picture_file_size) %>
    	</td>
    	<td>
    	  <%= item.created_at.to_s %>
    	</td>
      <td>
        <%= item.attach_images.count %>
      </td>      
    	<td><%= link_to image_tag('bin.png'), admin_image_path(item), :method => :delete, :confirm => 'Изображение будет удалено безвозвратно! Вы уверены?'  %></td>
    </tr>
  <% end -%>
  

</table>
  </div>
</div>

<div class="clr"></div>

<%= will_paginate @images %>
