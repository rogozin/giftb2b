$('.scrollable-control a').removeClass('selected');
 <% if params[:sale] == "1" -%>
   $('#sale_link').addClass('selected') ;
   $('#scrollableArea').html("<%= escape_javascript render(:partial => "sale") %>");   
 <% else -%>
   $('#novelty_link').addClass('selected');    
    $('#scrollableArea').html("<%= escape_javascript render(:partial => "novelty") %>");   
 <% end -%>
run_scrollable();
