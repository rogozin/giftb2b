<% if @products -%>          
<div class="content"> 
<div class="center_block"> 

<%#= render :partial => 'shared/paginate', :object=> @products %>
</div> <!-- end center_block --> 
 
<div class="center_block" id="catalog_items"> 
  <% for product  in @products do -%>
    <%= render :partial => 'shared/product', :object=>product %>  
  <% end -%>
  	
  <div class="clear"></div> 
</div> <!-- end center_block --> 
 
<div class="center_block"> 

<%#= render :partial => 'shared/paginate', :object=> @products %>
<div>
<%= will_paginate @products, :class=>"article_t_p" %>
</div>
<div class="spacer"></div>
<%= render :partial => "shared/paginate2" %></div> <!-- end center_block --> 
</div>
