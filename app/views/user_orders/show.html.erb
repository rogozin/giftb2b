<% page_title "Заказ № #{@order.id}" -%>
<h2>Заказ № <%= @order.id %></h2>

<p>Дата создания: <%= I18n.l(@order.created_at, :format => :long) %></p>

<p>Текущий статус: <%= @order.status %></p>

<div class="spacer"></div>

<h3>Перечень позиций:</h3>

<table>
    <th>Изображение</th>
    <th>Артикул</th>
    <th>Наименование</th>
    <th>Цена за шт</th>
    <th>Кол-во</th>
    <th>Сумма</th>
   <% @order.lk_order_items.each do |item| -%>
     <tr>
      <td align="center"><%= image_tag(item.product && item.product.picture ? item.product.picture.url(:thumb) : "default_image.jpg") %></td>
      <td><%= article(item.product) %></td>
      <td><%= item.product.short_name %></td>
      <td><%= price_ru_label item.price %></td>
      <td><%= item.quantity %></td>
      <td><%= price_ru_label item.price * item.quantity %></td>
    </tr>
   <% end -%>
</table>
